<!-- Security Notice Modal & Overlay -->
<% if (securityNotice && securityNotice.enabled) { %>
    <div id="securityNoticeOverlay" class="position-fixed top-0 start-0 w-100 h-100 d-none" style="z-index: 9999;"
        data-timer-duration="<%= securityNotice.timerDuration %>" data-blur-effect="<%= securityNotice.blurEffect %>">
        <!-- Backdrop Blur -->
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 security-backdrop">
        </div>

        <!-- Modal Content -->
        <div class="position-absolute top-50 start-50 translate-middle w-100" style="max-width: 550px; padding: 1rem;">
            <div
                class="card bg-dark text-white border-warning border-opacity-50 shadow-lg glass-morphism overflow-hidden">
                <div class="card-header border-bottom border-white-10 bg-warning bg-opacity-10 py-4">
                    <h2 class="mb-0 text-warning text-uppercase fw-black text-center letter-spacing-2"
                        style="font-size: 1.2rem;">
                        Confidential Administrator Panel
                    </h2>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="verify-icon-container mb-4 mx-auto" style="width: 100px; height: 100px;">
                            <div class="scanning-line"></div>
                            <i class="fas fa-shield-alt fa-3x text-warning shield-pulse"></i>
                        </div>
                        <div class="h5 text-white mb-4 fw-normal" style="line-height: 1.6; font-size: 1rem;">
                            This is a secure administrative environment where all activities may be
                            logged for security purposes. Actions performed here directly affect live
                            content and the portfolio system.
                        </div>

                        <div class="py-3 border-top border-bottom border-white-10 my-4">
                            <div class="small text-warning fw-bold text-center mb-0 text-uppercase letter-spacing-1">
                                Restricted access only â€” proceed with caution.
                            </div>
                        </div>
                    </div>

                    <button id="btnProceed"
                        class="btn btn-outline-warning w-100 py-3 fw-bold text-uppercase letter-spacing-1" disabled>
                        <span>Confirm Awareness</span>
                        <span class="ms-2 opacity-50">(<span id="countdownTimer">
                                <%= securityNotice.timerDuration %>
                            </span>s)</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const securityOverlay = document.getElementById('securityNoticeOverlay');

                if (securityOverlay) {
                    const btnProceed = document.getElementById('btnProceed');
                    const timerSpan = document.getElementById('countdownTimer');
                    const sessionKey = 'securityNoticeAccepted';
                    const timerDuration = parseInt(securityOverlay.dataset.timerDuration) || 0;
                    const hasBlurEffect = securityOverlay.dataset.blurEffect === 'true';

                    // Apply blur effect if enabled
                    if (hasBlurEffect) {
                        const backdrop = securityOverlay.querySelector('.security-backdrop');
                        if (backdrop) {
                            backdrop.style.backdropFilter = 'blur(12px)';
                            backdrop.style.webkitBackdropFilter = 'blur(12px)';
                        }
                    }

                    // Check if already accepted in this session
                    if (!sessionStorage.getItem(sessionKey)) {
                        // Show Modal
                        securityOverlay.classList.remove('d-none');
                        document.body.style.overflow = 'hidden';

                        let timeLeft = timerDuration;

                        // If timer is 0, enable immediately
                        if (timeLeft <= 0) {
                            btnProceed.removeAttribute('disabled');
                            btnProceed.innerHTML = '<i class="fas fa-check-circle me-2"></i>Proceed with Caution';
                            btnProceed.classList.remove('btn-outline-warning');
                            btnProceed.classList.add('btn-warning', 'text-dark');
                        } else {
                            const timer = setInterval(() => {
                                timeLeft--;
                                if (timerSpan) timerSpan.textContent = timeLeft;

                                if (timeLeft <= 0) {
                                    clearInterval(timer);
                                    btnProceed.removeAttribute('disabled');
                                    btnProceed.innerHTML = '<i class="fas fa-check-circle me-2"></i>Proceed with Caution';
                                    btnProceed.classList.remove('btn-outline-warning');
                                    btnProceed.classList.add('btn-warning', 'text-dark');
                                }
                            }, 1000);
                        }

                        // Proceed Action
                        btnProceed.addEventListener('click', function () {
                            securityOverlay.style.transition = 'opacity 0.5s ease';
                            securityOverlay.style.opacity = '0';

                            setTimeout(() => {
                                securityOverlay.classList.add('d-none');
                                document.body.style.overflow = '';
                                sessionStorage.setItem(sessionKey, 'true');
                            }, 500);
                        });
                    }
                }
            });
        </script>