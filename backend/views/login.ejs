<!-- Admin Preloader -->
<div id="admin-preloader">
    <div class="terminal-loader">
        <div class="terminal-text" id="typewriter-text"></div>
        <span class="cursor">_</span>
    </div>
</div>

<style>
    #admin-preloader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #050505;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.8s ease-out, visibility 0.8s ease-out;
    }

    .terminal-loader {
        font-family: 'Courier New', Courier, monospace;
        font-size: 2rem;
        color: #00ff00;
        /* Classic terminal green */
        display: flex;
        align-items: center;
        text-align: center;
    }

    .terminal-text {
        margin-right: 5px;
    }

    .cursor {
        animation: blink 1s infinite;
        font-weight: bold;
    }

    /* Hide login card initially */
    .login-card {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 1s ease-out, transform 1s ease-out;
    }

    /* Reveal class */
    .login-card.visible {
        opacity: 1;
        transform: translateY(0);
    }

    @keyframes blink {

        0%,
        100% {
            opacity: 1;
        }

        50% {
            opacity: 0;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const text = "Securing Administrator Environment...";
        const typingSpeed = 50; // ms per char (2s total)
        const element = document.getElementById("typewriter-text");
        const preloader = document.getElementById("admin-preloader");
        const loginCard = document.querySelector(".login-card");
        let i = 0;

        function typeWriter() {
            if (i < text.length) {
                element.innerHTML += text.charAt(i);
                i++;
                setTimeout(typeWriter, typingSpeed);
            } else {
                // Typing finished, wait then fade out
                setTimeout(() => {
                    preloader.style.opacity = "0";
                    preloader.style.visibility = "hidden";

                    // Reveal login card
                    if (loginCard) loginCard.classList.add("visible");

                    // Remove from DOM after fade for cleanup
                    setTimeout(() => {
                        preloader.remove();
                    }, 1000);
                }, 500); // 0.5s pause
            }
        }

        // Disable Right-Click
        document.addEventListener('contextmenu', event => event.preventDefault());

        // Start typing
        typeWriter();

        // Safety fallback (3s)
        setTimeout(() => {
            if (preloader && preloader.style.opacity !== "0") {
                preloader.style.opacity = "0";
                preloader.style.visibility = "hidden";
                if (loginCard) loginCard.classList.add("visible");
            }
        }, 3000);
    });
</script>

