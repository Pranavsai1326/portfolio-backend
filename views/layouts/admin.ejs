<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel | Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css?v=<%= Date.now() %>">
</head>

<body>
    <!-- VIDEO BACKGROUND -->
    <video autoplay muted loop playsinline id="bg-video" preload="auto">
        <source src="https://res.cloudinary.com/dyot8vo5t/video/upload/f_auto,q_auto/hero_qmyrxh.mp4" type="video/mp4">
    </video>
    <div class="bg-overlay"></div>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/dashboard' ? 'active' : '' %>"
                            href="/admin/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/spotlight' ? 'active' : '' %>"
                            href="/admin/spotlight">Spotlight</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/projects' ? 'active' : '' %>"
                            href="/admin/projects">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/certifications' ? 'active' : '' %>"
                            href="/admin/certifications">Certifications</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/skills' ? 'active' : '' %>"
                            href="/admin/skills">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/accomplishments' ? 'active' : '' %>"
                            href="/admin/accomplishments">Accomplishments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/strengths' ? 'active' : '' %>"
                            href="/admin/strengths">Strengths</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/contacts' ? 'active' : '' %>"
                            href="/admin/contacts">Communication</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/categories' ? 'active' : '' %>"
                            href="/admin/categories">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof path !== 'undefined' && path === '/settings' ? 'active' : '' %>"
                            href="/admin/settings">Configuration</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/api/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        <%- body %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>