<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="section-label mb-0"><i class="fas fa-arrow-left"></i> Message Viewer</h5>
            <div class="d-flex gap-2">
                <a href="/admin/contacts" class="btn btn-sm btn-outline-light">Back to Inbox</a>
                <a href="mailto:<%= contact.email %>" class="btn btn-sm btn-primary"><i
                        class="fas fa-reply me-2"></i>Reply</a>
                <form action="/admin/contacts/delete/<%= contact._id %>" method="POST" class="d-inline"
                    onsubmit="return confirm('Are you sure you want to delete this message?');">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>Delete</button>
                </form>
            </div>
        </div>

        <div class="card border-accent shadow-lg">
            <div class="card-header py-3 d-flex justify-content-between align-items-center d-none">
                <h5 class="mb-0"><i class="fas fa-envelope-open me-2 text-accent"></i>Message Details</h5>
                <span class="text-white-50 small">
                    <%= new Date(contact.createdAt).toLocaleString() %>
                </span>
            </div>
            <div class="card-body p-4">
                <div class="mb-4">
                    <label class="text-white-50 small text-uppercase mb-1">Subject</label>
                    <div class="fs-4 fw-bold text-white">
                        <%= contact.subject %>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="text-white-50 small text-uppercase mb-1">From</label>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-25 rounded-circle p-2 me-3 d-flex align-items-center justify-content-center"
                                style="width: 48px; height: 48px;">
                                <i class="fas fa-user text-primary fs-5"></i>
                            </div>
                            <div>
                                <div class="fw-bold fs-5 text-white">
                                    <%= contact.name %>
                                </div>
                                <div class="text-accent">
                                    <%= contact.email %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="text-white-50 small text-uppercase mb-2">Message</label>
                    <div class="p-4 bg-white-5 rounded border border-white-10 text-white-75"
                        style="white-space: pre-wrap; min-height: 200px;">
                        <%= contact.message %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>