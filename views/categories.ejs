<h2 class="admin-page-title"><i class="fas fa-tags"></i> Manage Categories</h2>

<div class="row mb-5">
    <div class="col-md-12">
        <h5 class="section-label"><i class="fas fa-plus-circle"></i> Add New Category</h5>
        <div class="card border-accent shadow-lg">
            <div class="card-header py-3 d-none">
                <i class="fas fa-plus-circle me-2 text-accent"></i>Add New Category
            </div>
            <div class="card-body p-4">
                <form action="/admin/categories" method="POST">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <label class="form-label">Category Name</label>
                            <input type="text" name="name" class="form-control" required
                                placeholder="e.g. Frontend, Backend, etc.">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Type</label>
                            <select name="type" class="form-select" required>
                                <option value="skill">Skill</option>
                                <option value="project">Project</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Display Order</label>
                            <input type="number" name="displayOrder" class="form-control" value="0">
                        </div>
                        <div class="col-md-12 text-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Add Category
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Project Categories -->
    <div class="col-md-6">
        <h5 class="section-label"><i class="fas fa-project-diagram"></i> Project Categories</h5>
        <div class="card border-accent shadow-lg mb-4">
            <div class="card-header py-3 d-none">
                <i class="fas fa-project-diagram me-2 text-warning"></i>Project Categories
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white-5 text-uppercase text-white-50 small">
                            <tr>
                                <th class="ps-4">Name</th>
                                <th>Order</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% const projectCats=categories.filter(c=> c.type === 'project'); %>
                                <% if (projectCats.length> 0) { %>
                                    <% projectCats.forEach(cat=> { %>
                                        <tr>
                                            <td class="ps-4 fw-bold text-white">
                                                <%= cat.name %>
                                            </td>
                                            <td><span class="text-white-50">
                                                    <%= cat.displayOrder %>
                                                </span></td>
                                            <td class="text-end pe-4">
                                                <button
                                                    class="btn btn-sm btn-outline-info border-0 me-2 edit-category-btn"
                                                    data-id="<%= cat._id %>" data-name="<%= cat.name %>"
                                                    data-type="<%= cat.type %>" data-order="<%= cat.displayOrder %>"
                                                    data-bs-toggle="modal" data-bs-target="#editCategoryModal">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <form action="/admin/categories/delete/<%= cat._id %>" method="POST"
                                                    onsubmit="return confirm('Delete this category? Only possible if not in use.');"
                                                    class="d-inline">
                                                    <button type="submit"
                                                        class="btn btn-sm btn-outline-danger border-0">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="3" class="text-center py-5 text-muted">
                                                        <i class="fas fa-info-circle me-2"></i>No project categories
                                                    </td>
                                                </tr>
                                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Skill Categories -->
    <div class="col-md-6">
        <h5 class="section-label"><i class="fas fa-code"></i> Skill Categories</h5>
        <div class="card border-accent shadow-lg mb-4">
            <div class="card-header py-3 d-none">
                <i class="fas fa-code me-2 text-info"></i>Skill Categories
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white-5 text-uppercase text-white-50 small">
                            <tr>
                                <th class="ps-4">Name</th>
                                <th>Order</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% const skillCats=categories.filter(c=> c.type === 'skill'); %>
                                <% if (skillCats.length> 0) { %>
                                    <% skillCats.forEach(cat=> { %>
                                        <tr>
                                            <td class="ps-4 fw-bold text-white">
                                                <%= cat.name %>
                                            </td>
                                            <td><span class="text-white-50">
                                                    <%= cat.displayOrder %>
                                                </span></td>
                                            <td class="text-end pe-4">
                                                <button
                                                    class="btn btn-sm btn-outline-info border-0 me-2 edit-category-btn"
                                                    data-id="<%= cat._id %>" data-name="<%= cat.name %>"
                                                    data-type="<%= cat.type %>" data-order="<%= cat.displayOrder %>"
                                                    data-bs-toggle="modal" data-bs-target="#editCategoryModal">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <form action="/admin/categories/delete/<%= cat._id %>" method="POST"
                                                    onsubmit="return confirm('Delete this category? Only possible if not in use.');"
                                                    class="d-inline">
                                                    <button type="submit"
                                                        class="btn btn-sm btn-outline-danger border-0">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="3" class="text-center py-5 text-muted">
                                                        <i class="fas fa-info-circle me-2"></i>No skill categories
                                                    </td>
                                                </tr>
                                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-accent shadow-lg">
            <div class="modal-header border-bottom border-white-10">
                <h5 class="modal-title font-title"><i class="fas fa-edit me-2 text-accent"></i>Edit Category</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form action="" method="POST">
                    <div class="mb-3">
                        <label class="form-label text-white-50 small text-uppercase">Category Name</label>
                        <input type="text" name="name" class="form-control bg-dark border-white-10 text-white" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white-50 small text-uppercase">Type</label>
                        <select name="type" class="form-select bg-dark border-white-10 text-white" required>
                            <option value="skill">Skill</option>
                            <option value="project">Project</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white-50 small text-uppercase">Display Order</label>
                        <input type="number" name="displayOrder" class="form-control bg-dark border-white-10 text-white"
                            value="0">
                    </div>
            </div>
            <div class="modal-footer border-top border-white-10">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save me-2"></i>Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.edit-category-btn').forEach(btn => {
        btn.addEventListener('click', function () {
            const form = document.querySelector('#editCategoryModal form');
            form.action = `/admin/categories/update/${this.dataset.id}`;
            form.querySelector('[name="name"]').value = this.dataset.name;
            form.querySelector('[name="type"]').value = this.dataset.type;
            form.querySelector('[name="displayOrder"]').value = this.dataset.order;
        });
    });
</script>