<h2 class="admin-page-title"><i class="fas fa-envelope"></i> Contact Messages</h2>

<div class="card border-accent shadow-lg mb-4">
    <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
        <div class="d-flex align-items-center gap-3">
            <span class="section-label mb-0"><i class="fas fa-inbox"></i> Inbox</span>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Filter: <%= filters.isRead==='true' ? 'Read' : (filters.isRead==='false' ? 'Unread' : 'All' ) %>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li><a class="dropdown-item"
                            href="/admin/contacts<%= filters.search ? '?search=' + filters.search : '' %>">All
                            Messages</a></li>
                    <li><a class="dropdown-item"
                            href="/admin/contacts?isRead=false<%= filters.search ? '&search=' + filters.search : '' %>">Unread
                            Only</a></li>
                    <li><a class="dropdown-item"
                            href="/admin/contacts?isRead=true<%= filters.search ? '&search=' + filters.search : '' %>">Read
                            Only</a></li>
                </ul>
            </div>
        </div>
        <form action="/admin/contacts" method="GET" class="d-flex gap-2">
            <% if (filters.isRead) { %>
                <input type="hidden" name="isRead" value="<%= filters.isRead %>">
                <% } %>
                    <div class="input-group input-group-sm">
                        <input type="text" name="search" class="form-control" placeholder="Search..."
                            value="<%= filters.search || '' %>">
                        <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                    <% if (filters.search) { %>
                        <a href="/admin/contacts<%= filters.isRead ? '?isRead=' + filters.isRead : '' %>"
                            class="btn btn-sm btn-outline-danger" title="Clear Search"><i class="fas fa-times"></i></a>
                        <% } %>
        </form>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-white-5 text-uppercase text-white-50 small">
                    <tr>
                        <th class="ps-4">Date</th>
                        <th>From</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length> 0) { %>
                        <% contacts.forEach(contact=> { %>
                            <tr class="<%= !contact.isRead ? 'bg-accent-subtle' : '' %>"
                                style="cursor: pointer; transition: background-color 0.2s;"
                                onclick="window.location.href='/admin/contacts/<%= contact._id %>'">
                                <td class="ps-4 text-white-50 small" style="width: 120px;">
                                    <%= new Date(contact.createdAt).toLocaleDateString() %>
                                </td>
                                <td style="width: 250px;">
                                    <div class="fw-bold text-white">
                                        <%= contact.name %>
                                    </div>
                                    <div class="small text-white-50 mb-1">
                                        <%= contact.subject %>
                                    </div>
                                    <div class="small text-accent"><a href="mailto:<%= contact.email %>"
                                            class="text-decoration-none text-reset" onclick="event.stopPropagation()">
                                            <%= contact.email %>
                                        </a></div>
                                </td>
                                <td>
                                    <div class="text-white-75 text-truncate" style="max-width: 400px;"
                                        title="<%= contact.message %>">
                                        <%= contact.message %>
                                    </div>
                                </td>
                                <td>
                                    <% if (contact.isRead) { %>
                                        <span
                                            class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill px-3">Read</span>
                                        <% } else { %>
                                            <span
                                                class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">New</span>
                                            <% } %>
                                </td>
                                <td class="text-end pe-4">
                                    <% if (!contact.isRead) { %>
                                        <form action="/admin/contacts/read/<%= contact._id %>" method="POST"
                                            class="d-inline" onclick="event.stopPropagation()">
                                            <button type="submit" class="btn btn-sm btn-outline-primary border-0"
                                                title="Mark as Read">
                                                <i class="fas fa-check-double"></i>
                                            </button>
                                        </form>
                                        <% } %>
                                            <form action="/admin/contacts/delete/<%= contact._id %>" method="POST"
                                                class="d-inline"
                                                onsubmit="return confirm('Are you sure you want to delete this message?');"
                                                onclick="event.stopPropagation()">
                                                <button type="submit" class="btn btn-sm btn-outline-danger border-0"
                                                    title="Delete Message">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                </td>
                            </tr>

                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="fas fa-inbox fa-3x mb-3 d-block opacity-50"></i>
                                            No messages found
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% if (pagination.pages> 1) { %>
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item <%= pagination.page == 1 ? 'disabled' : '' %>">
                <a class="page-link bg-dark border-accent text-white"
                    href="?page=1<%= filters.isRead ? '&isRead=' + filters.isRead : '' %><%= filters.search ? '&search=' + filters.search : '' %>">&laquo;</a>
            </li>
            <% for(let i=1; i <=pagination.pages; i++) { %>
                <li class="page-item <%= pagination.page == i ? 'active' : '' %>">
                    <a class="page-link"
                        href="?page=<%= i %><%= filters.isRead ? '&isRead=' + filters.isRead : '' %><%= filters.search ? '&search=' + filters.search : '' %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
                    <li class="page-item <%= pagination.page == pagination.pages ? 'disabled' : '' %>">
                        <a class="page-link"
                            href="?page=<%= pagination.pages %><%= filters.isRead ? '&isRead=' + filters.isRead : '' %><%= filters.search ? '&search=' + filters.search : '' %>">&raquo;</a>
                    </li>
        </ul>
    </nav>
    <% } %>